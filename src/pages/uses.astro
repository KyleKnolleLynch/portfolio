  },
  {
    name: 'Chromium Browser/Google Chrome (Devtools and React/Redux Devtools)',
  },
  {
    name: 'Librewolf (open source fork of Firefox)',
  },
  {
    name: 'Postman',
  },
]

const graphicsVideo = [
  {
    name: 'Gimp',
  },
  {
    name: 'Figma',
  },
  {
    name: 'Kdenlive',
  },
  {
    name: 'OBS Studio',
  },
  {
    name: 'Flameshot',
  },
]

const computer = [
  {
    name: 'Arcolinux (Desktop environment: LXQT, Window manager: xfwm4)',
  },
  {
    name: 'Windows 10 (If I need to)',
  },
  {
    name: 'Intel i7-8700K overclocked to 5ghz',
  },
  {
    name: 'Gigabyte Aorus z370 7 motherboard',
  },
  {
    name: '16gb G.Skill TridentZ DDR4-3200 CL14-14-14-34',
  },
  {
    name: 'Zotac 1070 GPU',
  },
  {
    name: 'Samsung and Adata PCIe Gen-4 m.2 SSDs',
  },
  {
    name: 'Lian Li 011 Air Case',
  },
]

const peripherals = [
  {
    name: 'Razer Blackwidow Chroma X (Green switches) keyboard',
  },
  {
    name: 'Roccat Kain 120 AIMO mouse',
  },
  {
    name: 'Audio Technica AT2020+ USB microphone w/ boom arm',
  },
  {
